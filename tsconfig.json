{
  "compilerOptions": {
    "outDir": ".",
    "declaration": true,
    "target": "es5",
    "module": "es6",
    "watch": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "inlineSourceMap": false,
    "sourceMap": false,
    "moduleResolution": "node"
  },
  "files": [
    "index.ts",
    "test/servertest.ts"    
  ],
  "exclude": [
    "node_modules",
    "platforms",
    "www"
  ],
  "typeRoots": [
      "node_modules/@types"
  ],
  "types": [ "node"]
}